#
# Output Sway Configuration when ThinkPad Docked
#
        # Enable Desktop Displays
        output eDP-1 	disable
        output DP-5 	enable
        output DP-3 	position 0 0
        output DP-4 	position 1920 0
        output DP-5 	position 3840 0

        # Assign workspaces to correct display
        workspace 1 output DP-3
        workspace 2 output DP-3
        workspace 3 output DP-3
        workspace 4 output DP-4
        workspace 5 output DP-4
        workspace 6 output DP-4
        workspace 7 output DP-5
        workspace 8 output DP-5
        workspace 9 output DP-5

	# Set Wallpaper for all three monitors
	output DP-3 bg $HOME/.config/sway/themes/wallpaper1.jpg fill
	output DP-4 bg $HOME/.config/sway/themes/wallpaper2.jpg fill
	output DP-5 bg $HOME/.config/sway/themes/wallpaper3.jpg fill
