# 
	# %%$mod+Shift+q launch qutebrowser %%
	bindsym $mod+Shift+q exec spawn qutebrowser
	# %%$mod+f: Launch firefox %%
	bindsym $mod+f exec spawn firefox
	# %%$mod+y: Launch Syncthing %%
	#bindsym+y: exec spawn syncthing
	# %%$mod+t: Launchy Thunderbird %%
	bindsym $mod+t exec spawn thunderbird 
	# %%$mod+n: Launch GUI Network Connection Editor %%
	bindsym $mod+n exec spawn nm-connection-editor 
	# %%$mod+e: Launch emacs %%
	bindsym $mod+e exec spawn emacs
	# %%$mod+i: Launch IMV %%
	bindsym $mod+i exec spawn imv
	# %%$mod+Shift+i: Launch GIMP %%
	bindsym $mod+Shift+i exec spawn gimp
	# %%$mod+z: Luanch PDF Viewer Zathura %%
	bindsym $mod+z exec spawn zathura
	# %%$mod+v: Launch MPV Video Player %%
	bindsym $mod+v exec spawn mpv 
	# %%$mod+Shift+v: Launch VLC Video Player %%
	bindsym $mod+Shift+v exec spawn vlc 
	# %%$mod+b: Launch Calibre eBook Manager %%
	bindsym $mod+b exec spawn calibre 
	# %%$mod+m: Launch Lollypop Music Player
	bindsym $mod+m exec spawn lollypop


#
# Terminal Application Keybindings
# 
	# %%$mod+r: Launch default file manager %%
	bindsym $mod+r exec spawn ranger terminal
	# %%$mod+Shift+d: Dropdown terminal scratchpad %%
	bindsym $mod+Shift+d exec spawn zsh dropdown
	# %%$mod+Return: Launch Kitty main terminal session %%
	bindsym $mod+Return exec spawn Main_Terminal session
	# %%$mod+Shift+Return: Launch a kitty terminal %%
	bindsym $mod+Shift+Return exec $TERMINAL
	# %%$mod+Shift+n: Launch Network Manager Configuration %%
	bindsym $mod+Shift+n exec spawn nmtui terminal
	# %%$mod+c: Dropdown calculator scratchpad %%
	bindsym $mod+c exec spawn bc dropdown
	# %%$mod+Shift+b: Launch Bluetooth configuration %%
	bindsym $mod+Shift+b exec bluetoothctl terminal

#
# Media Keybindings
#
	# %%$mod+minus: Lower volume 5% %%
	bindsym $mod+minus exec pactl set-sink-volume @DEFAULT_SINK@ -5%
	# %%$mod+Shift+minus: Lower volume 20% %%
	bindsym $mod+Shift+minus exec pactl set-sink-volume @DEFAULT_SINK@ -20%
	# %%$mod+equal: Raise volume 5% %%
	bindsym $mod+equal exec pactl set-sink-volume @DEFAULT_SINK@ +5%
	# %%$mod+Shift+equal: Raise volume 20% %%
	bindsym $mod+Shift+equal exec pactl set-sink-volume @DEFAULT_SINK@ +20%
	# %%$mod+semicolon: Emergency Key %%
	#bindsym $mod+semicolon exec emergency-hide
	# %%$mod+Shift+semicolon: Toggle mute volume %%
	bindsym $mod+Shift+semicolon exec pactl set-sink-mute @DEFAULT_SINK@ toggle
	# %%$mod+bracketleft: Back to previous song/video %%
	bindsym $mod+bracketleft exec playerctl prevous
	# %%$mod+bracketright: Skip to next song/video %%
	bindsym $mod+bracketright exec playerctl next
	# %%$mod+Shift+bracketleft: Skip backward 10 seconds in song/video %%
	bindsym $mod+Shift+bracketleft exec playerctl position 10 +
	# %%$mod+Shift+bracketright: Skip forward 10 seconds in song/video %%
	bindsym $mod+Shift+bracketright exec playerctl position 10 -
	# %%$mod+Shift+m: play/pause song/video %%
	bindsym $mod+Shift+m exec playerctl play-pause
	
#
# Extra XF86 Keys
#
	# ThinkPad Special Keys
 	bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
 	bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
 	bindsym XF86AudioRaiseVolume exec  pactl set-sink-volume @DEFAULT_SINK@ +5%
 	bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
 	bindsym XF86MonBrightnessDown exec light -A 10
 	bindsym XF86MonBrightnessUP exec light -U 10
 	bindsym XF86Display exec wdisplays
 	bindsym XF86WLAN exec wifi_toggle
# 	bindsym XF86Tools exec webcam_toggle
 	bindsym XF86Search exec web_search
 	bindsym xF86LaunchA exec $menu
 	bindsym XF86Explorer exec spawn $FILE terminal
