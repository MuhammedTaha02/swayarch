
#
# Basic Keybindings:
#
	# %%mod+q: Kill focused window %%
	bindsym $mod+q kill

	# %%mod+Shift+r: Restart sway %%
	bindsym $mod+Shift+r restart

	# %%$mod+Shift+c: Reload Sway configuration %%
	bindsym $mod+Shift+c reload


#
# Movement Keybindings:
#
	# %%$mod+$left: Focus on window to the left %%
	bindsym $mod+$left focus left
	# %%$mod+$right: Focus on window below %%
	bindsym $mod+$down focus down
	# %%$mod+$up: Focus on window above %%
	bindsym $mod+$up focus up
	# %%$mod+$right: Focus on window to the right %%
	bindsym $mod+$right focus right

	# Or use arrow keys
	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right

	# %%$mod+Shift+$left: Move focused window to the left %%
	bindsym $mod+Shift+$left move left
	# %%$mod+Shift+$down: Move focused window down %%
	bindsym $mod+Shift+$down move down
	# %%$mod+Shift+$down: Move focused window up %%
	bindsym $mod+Shift+$up move up
	# %%$mod+Shift+$right: Move focused window to the right %%
	bindsym $mod+Shift+$right move right

	# Ditto, with arrow keys
	bindsym $mod+Shift+Left move left
	bindsym $mod+Shift+Down move down
	bindsym $mod+Shift+Up move up
	bindsym $mod+Shift+Right move right

#
# Workspaces:
#
	# %%$mod+Numberkey: Switch to workspace of same number %%
	bindsym $mod+1 workspace $ws1
	bindsym $mod+2 workspace $ws2
	bindsym $mod+3 workspace $ws3
	bindsym $mod+4 workspace $ws4
	bindsym $mod+5 workspace $ws5
	bindsym $mod+6 workspace $ws6
	bindsym $mod+7 workspace $ws7
	bindsym $mod+8 workspace $ws8
	bindsym $mod+9 workspace $ws9
	bindsym $mod+0 workspace $ws10

	# %%$mod+comma: Switch to previous workspace %%
	bindsym $mod+comma workspace prev
	# %%$mod+period: Switch to next workspace %%
	bindsym $mod+period workspace next
	# %%$mod+slash: Switch workspack back and forth %%
	bindsym $mod+slash workspace back_and_forth 

	# %%mod+Shift+Numberkey: Move focused window to workspace of same number %%
	bindsym $mod+Shift+1 move container to workspace $ws1, workspace $ws1
	bindsym $mod+Shift+2 move container to workspace $ws2, workspace $ws2
	bindsym $mod+Shift+3 move container to workspace $ws3, workspace $ws3
	bindsym $mod+Shift+4 move container to workspace $ws4, workspace $ws4
	bindsym $mod+Shift+5 move container to workspace $ws5, workspace $ws5
	bindsym $mod+Shift+6 move container to workspace $ws6, workspace $ws6
	bindsym $mod+Shift+7 move container to workspace $ws7, workspace $ws7
	bindsym $mod+Shift+8 move container to workspace $ws8, workspace $ws8
	bindsym $mod+Shift+9 move container to workspace $ws9, workspace $ws9
	bindsym $mod+Shift+0 move container to workspace $ws9, workspace $ws10

	# %%mod+Shift+comma: Move focused window to previous monitor %%
	bindsym $mod+Shift+comma mark --add current; move container to output left; [con_mark="current"] focus; unmark current
	# %%mod+Shift+period: Move focused window to next monitor %%
	bindsym $mod+Shift+period mark --add current; move container to output right; [con_mark="current"] focus; unmark current
	# %%mod+Shift+slash: Swap workspaces between two monitors %%
	#bindsym $mod+Shift+slash exec swap-workspaces

#
# Layout stuff:
#
	# %%$mod+Tab: Toggle layout between tabbed and split %%
	bindsym $mod+Tab layout toggle tabbed split
	# %%$mod+Shift+Tab: Toggle between vertical and horizontal split modes
	bindsym $mod+Shift+Tab split toggle

	# %%$mod+Shift+f: Make focused window fullscreen %%
	bindsym $mod+Shift+f fullscreen

	# %%$mod+g: Reset Gaps to default %%
	bindsym $mod+g gaps inner all set $gapsin, gaps outer all set $gapsout
	# %%$mod+Shift+g: Remove Gaps
	bindsym $mod+Shift+g gaps inner all set 0, gaps outer all set 0
	
	# %%$mod+t: Toggle focused window between tiled and floating %%
	bindsym $mod+grave floating toggle

	# %%$mod+Shift+t: Swap focus between tiling and floating areas %%
	bindsym $mod+Shift+grave focus mode_toggle

#
# Resizing Containers:
#
	mode "resize" {
    		# left will shrink the containers width
    		# right will grow the containers width
    		# down will shrink the containers height    
		# up will grow the containers height
    		bindsym $left resize shrink width 10px
    		bindsym $down resize shrink height 10px
    		bindsym $up resize grow height 10px
    		bindsym $right resize grow width 10px

    		# Ditto, with arrow keys
    		bindsym Left resize shrink width 10px
    		bindsym Down resize grow height 10px
    		bindsym Up resize shrink height 10px
    		bindsym Right resize grow width 10px

    		# Return to default mode
    		bindsym Return mode "default"    
		bindsym Escape mode "default"
	}		
	# %%$mod+Shift+z: Resize focused window %%
	bindsym $mod+Shift+z mode "resize"

#
# Menu & Custom Application Keybindings
#
	# %%$mod+w: Choose from running windows %%
	bindsym $mod+w exec swytch

	# %%$mod+p: Act on last item copied to clipboard %%
	#bindsym $mod+p exec clip-actions.sh
	# %%$mod+Shift+p: View Clipboard History %%
	bindsym $mod+Shift+p exec clipman
	
	# %%$mod+s: Lock screen %%
	bindsym $mod+s exec swaylock -f -i $HOME/.cache/wallpaper2.jpg
	# %%$mod+Shift+s: Lock and Suspend Thinkpad %%
	bindsym $mod+Shift+s exec sudo systemctl suspend
	
	# %%$mod+d: Rofi Thinkpad menu %%
	bindsym $mod+d exec wofi_csv ThinkPad
	# %%$mod+o: xdg-open menu %%
	bindsym $mod+o exec open
	# %%$mod+x: Power Menu (Shutdown, Reboot, etc) %% 
	bindsym $mod+x exec wofi_csv Power

	# %%$mod+Space: Menu Launcher %%
	bindsym $mod+Space exec $menu
	# %%$mod+Shift+Space: Choose from Alt Menus %%
	bindsym $mod+Shift+Space exec wofi_csv Menus

	# %%$mod+Print: Screenshot screen %%
	bindsym $mod+Print exec $screenshot
	# %%$mod+Shift+Print: Screenshot area %%
	bindsym $mod+Shift+Print exec $screenclip

#
