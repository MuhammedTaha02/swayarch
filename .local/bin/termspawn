#!/usr/bin/env sh

# Starts Programs assign to KeyBindigs
# If the program is already started it 

[ -z "$2" ] && exit

program=$1
mark=$2
shift

if  swaymsg -t get_tree | grep "$mark" 
then
	echo "Window detected."
	swaymsg [con_mark="$mark"] focus
else
	echo "Window not detected... spawning."
	swaymsg exec "$TERMINAL $program"
	sleep 1
	swaymsg mark $mark
fi
